extends layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/product.css")

block content
    if prods.length > 0
        .grid
            each product in prods
                article.card.product-item
                    header.card__header
                        h1.product__title #{product.title}
                    div.card__image
                        img(src="https://pixabay.com/get/52e4d44b4c54b108feda8460825668204022dfe05558724d702b7bd3/books-441866_1920.jpg", alt="A Book")
                    div.card__content
                        h1.product__price $19.99
                        p.product__description A very interesting book about so many even more interesting things!
                    .card__actions
                        button.btn Add to Cart
    else
        h1 No Products